{
  "name": "sketch-ui-color-palette",
  "version": "5.0.0",
  "private": true,
  "description": "UI Color Palette is a Sketch plugin that creates, manages, deploys, and publishes consistent and accessible color palettes.",
  "author": "AurÃ©lien Grimaud",
  "license": "MIT",
  "repository": "https://github.com/a-ng-d/sketch-ui-color-palette",
  "workspaces": [
    "packages/ui-ui-color-palette",
    "packages/ui-ui-color-palette/packages/auth-yelbolt",
    "packages/ui-ui-color-palette/packages/auth-yelbolt-worker",
    "packages/ui-ui-color-palette/packages/announcements-yelbolt-worker"
  ],
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "sketch-ui-color-palette",
    "manifest": "src/manifest.json",
    "main": "sketch-ui-color-palette.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "install:packages": "npm install --workspaces",
    "update:packages": "git submodule update --remote --merge",
    "update:figmug": "npm i @a_ng_d/figmug-ui@latest @a_ng_d/figmug-utils@latest",
    "update:uicp": "npm i @a_ng_d/utils-ui-color-palette@latest",
    "start:ext": "npm run start:packages -w ui-ui-color-palette",
    "start:dev": "skpm-build --watch",
    "build": "cross-env NODE_ENV=development skpm-build",
    "build:prod": "cross-env NODE_ENV=production skpm-build",
    "watch": "skpm-build --watch",
    "hotreload": "find ./sketch-ui-color-palette.sketchplugin -name '*js' | entr -r /Applications/Sketch.app/Contents/MacOS/Sketch",
    "typecheck": "npx tsc --noEmit",
    "lint": "npx eslint ./src ./resources --fix --ext .js,.ts,.tsx .",
    "format": "npx prettier './src' './resources' --write"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.28.0",
    "@penpot/plugin-types": "^1.3.2",
    "@sentry/webpack-plugin": "^4.0.0",
    "@skpm/builder": "^0.7.4",
    "@skpm/extract-loader": "^2.0.2",
    "@types/chroma-js": "^2.4.0",
    "@types/file-saver": "^2.0.5",
    "@types/jszip": "^3.4.1",
    "@types/mixpanel-browser": "^2.60.0",
    "@types/node": "^22.16.4",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "css-loader": "^3.2.0",
    "dotenv": "^17.2.0",
    "dotenv-webpack": "^8.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.25.3",
    "file-loader": "^4.3.0",
    "html-loader": "^0.5.5",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.1.2",
    "sketch-app-types": "^0.1.1",
    "style-loader": "^1.3.0",
    "ts-loader": "^8.4.0",
    "typescript": "^5.4.3",
    "url-loader": "^4.1.1"
  },
  "resources": [
    "resources/**/*.js"
  ],
  "dependencies": {
    "@a_ng_d/figmug-ui": "^1.15.19",
    "@a_ng_d/figmug-utils": "^0.7.1",
    "@a_ng_d/utils-ui-color-palette": "^1.3.20",
    "@babel/preset-react": "^7.27.1",
    "@babel/runtime": "^7.27.6",
    "@nanostores/preact": "^0.5.2",
    "@sentry/react": "^8.8.0",
    "@sketch-hq/sketch-file-format-ts": "^6.5.0",
    "@supabase/supabase-js": "^2.44.2",
    "chroma-js": "^2.4.2",
    "fflate": "^0.8.2",
    "file-saver": "^2.0.5",
    "mixpanel-browser": "^2.66.0",
    "preact": "^10.6.4",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "sketch-module-web-view": "^3.1.4",
    "uid": "^2.0.2"
  }
}
